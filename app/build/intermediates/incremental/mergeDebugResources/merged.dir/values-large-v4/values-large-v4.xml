<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="abc_action_bar_embed_tabs_pre_jb">true</bool>
    <bool name="abc_config_allowActionMenuItemTextWithIcon">true</bool>
    <dimen name="Large_button_height">60dp</dimen>
    <dimen name="abc_config_prefDialogWidth">440dp</dimen>
    <dimen name="abc_search_view_text_min_width">192dip</dimen>
    <dimen name="adf_logo">320dp</dimen>
    <item name="dialog_fixed_height_major" type="dimen">60%</item>
    <item name="dialog_fixed_height_minor" type="dimen">90%</item>
    <item name="dialog_fixed_width_major" type="dimen">60%</item>
    <item name="dialog_fixed_width_minor" type="dimen">90%</item>
    <dimen name="gesture_scroll_output_size">200dp</dimen>
    <dimen name="large_font_size">30sp</dimen>
    <dimen name="large_margin">88dp</dimen>
    <dimen name="mid_font_size">24sp</dimen>
    <dimen name="mid_margin">44dp</dimen>
    <dimen name="out_of_view_scroll_size">1200dp</dimen>
    <dimen name="small_font_size">20sp</dimen>
    <dimen name="small_margin">22dp</dimen>
    <dimen name="xl_font_size">42sp</dimen>
    <integer name="abc_max_action_buttons">4</integer>
    <style name="ADFButton">
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@color/custom_dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="ADFButton.Center_Horizontal" parent="ADFButton.EXT">
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="ADFButton.EXT" parent="ADFButton">

    </style>
    <style name="ADFHeadLine">
        <item name="android:text">@string/placeholder</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="ADFLargeHeadline" parent="ADFHeadLine">
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>
    <style name="ADFMidHeadLine" parent="ADFHeadLine">
        <item name="android:textSize">@dimen/mid_font_size</item>
    </style>
    <style name="ADFSmallHeadLine" parent="ADFHeadLine">
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    <style name="ADFXLHeadline" parent="ADFHeadLine">
        <item name="android:textSize">@dimen/xl_font_size</item>
    </style>
    <style name="Base.Theme.AppCompat.DialogWhenLarge" parent="Base.Theme.AppCompat.Dialog.FixedSize"/>
    <style name="Base.Theme.AppCompat.Light.DialogWhenLarge" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize"/>
    <style name="textField">
        <item name="android:text">@string/placeholder</item>
        <item name="android:textSize">@dimen/mid_font_size</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
    </style>
</resources>